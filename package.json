{
  "name": "tradeos-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "TradeOS - Production-ready monorepo with Expo, Next.js, and Supabase",
  "scripts": {
    "bootstrap": "pnpm install && pnpm turbo run build --filter=!mobile",
    "dev": "pnpm turbo run dev",
    "build": "pnpm turbo run build",
    "lint": "pnpm turbo run lint",
    "test": "pnpm turbo run test",
    "typecheck": "pnpm turbo run typecheck",
    "deploy": "pnpm run build",
    "clean": "pnpm turbo run clean && rm -rf node_modules"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "devDependencies": {
    "turbo": "^2.3.3",
    "typescript": "^5.7.2",
    "eslint": "^9.17.0",
    "@typescript-eslint/parser": "^8.19.1",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "prettier": "^3.4.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5",
    "@types/jest": "^29.5.14"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  }
}
